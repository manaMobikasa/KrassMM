<div class="popUpBack "></div>
<div class="dis-none popUpBody">
    <div class="popUpDiv">
        <div class="popupImgBlk">
            <img src="{{ section.settings.popUp_image |img_url: 'master'}}" alt="popUp_Image">
        </div>
        <div class="popupInfo">
            <h1 class="popUpTitle fontTitania">{{ section.settings.popUp_title }}</h1>
            <p class="popUpPara fontKirvy">
                {{ section.settings.popUp_Text }}
            </p>
            <div class="buttonDiv">
                <button>ENTER</button>
                <button id="btnExit">EXIT</button>
            </div>
        </div>
    </div>
</div>

<style>
    .dis-none {
        display: none;
    }

    .popUpBody {
        position: fixed;
        top: 72px;
        z-index: 4;
    }

    .popUpBack {
        display: none;
        position: fixed;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        z-index: 3;
        top: 0;
    }

    .popUpDiv {
        margin: 0 19px;
        display: flex;
        flex-direction: column;
    }

    .popUpTitle {
        font-size: 20px;
        margin: 0;
        color: white;
        text-align: center;
    }

    .popUpPara {
        font-size: 17px;
        text-align: center;
        line-height: 1.3;
        padding: 28px 24px;
        color: #FFFFFF;
        opacity: 0.9;
        letter-spacing: 1px;
    }

    .popupImgBlk {
        width: 100%;
        height: 262px;
    }

    .popupImgBlk>img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .popupInfo {
        background-color: #AD7920;
        font-size: 17px;
        text-align: center;
        line-height: 1.3;
        padding: 28px 0;
    }

    .buttonDiv {
        text-align: center;
    }

    .buttonDiv>button {
        width: 97px;
        height: 29px;
        margin: 0 10px;
    }

    .buttonDiv>button:first-child {
        color: white;
        background-color: black;
        border: 1px solid black;
    }

    .buttonDiv>button:last-child {
        background-color: white;
        border: 1px solid white;
    }

    @media(min-width:1000px) {
        .popUpBody {
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            margin: auto;
        }

        .popUpDiv {
            flex-direction: row;
        }

        .popupImgBlk {
            width: 380px;
            height: 477px;
        }

        .popupInfo {
            width: 476px;
            height: 476px;
            padding: 66px 0;
        }

        .popUpTitle {
            font-size: 26px;
        }

        .popUpPara {
            font-size: 19px;
            padding: 58px 35px;
        }

        .buttonDiv>button {
            width: 131px;
            height: 40px;
            margin: 0 14.07px;
        }

    }
</style>
<script>
    window.addEventListener("load", function () {
        setTimeout(() => {
            document.querySelector(".popUpBack").style.display = "block";
            document.querySelector(".dis-none").style.display = "block";
        }, 5000)
    })
    document.querySelector('#btnExit').addEventListener("click", function () {
        document.querySelector(".popUpBack").style.display = "none";
        document.querySelector(".dis-none").style.display = "none";
    });
</script>
{% schema %}
{
"name": "PopUp",
"settings":[
{
"type": "image_picker",
"id": "popUp_image",
"label": "Product Image"
},{
"type": "text",
"id": "popUp_title",
"label": "Product Title"
},{
"type": "textarea",
"id": "popUp_Text",
"label": "Product Description"
}
],
"presets": [
{
"name": "PopUp",
"category":"notification"
}
]
}
{% endschema %}